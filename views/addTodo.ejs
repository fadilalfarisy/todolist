<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous">
    </script>
    <title>Create Todo</title>
</head>

<body>

    <div class="container" style="width: 400px; margin-top: 200px;">
        <h2 class="text-center">Create Todo</h2>

        <!-- input todo -->
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Todo</label>
            <input type="text" class="form-control" name="todo" id="exampleFormControlInput1" form="form-save" required>
        </div>
        <!-- input description -->
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" form="form-save"
                rows="3"></textarea>
        </div>
        <!-- input file image -->
        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Image</label>
            <input class="form-control" type="file" name="image" id="formFile" form="form-save">
        </div>

        <div class="text-end">
            <!-- button cancel create todo -->
            <form style="display:inline;" id="form-cancel" action="/todo" method="get">
                <button type="submit" class="btn btn-danger">cancel</button>
            </form>
            <!-- button save todo -->
            <form style="display:inline;" id="form-save" action="/todo/add" method="post" enctype="multipart/form-data">
                <button type="submit" class="btn btn-primary">save</button>
            </form>
        </div>

    </div>
</body>

</html>